<h4>Sign in</h4>

<%= form_for("user", :url => user_session_path) do |f| %>
	<li><%= f.label :email %></li>
  <li><%= f.text_field :email %></li>
  <li><%= f.label :password %></li>
  <li><%= f.password_field :password %></li>
  <li><%= f.check_box :remember_me %></li>
  <li><%= f.label :remember_me %></li>
  <li><%= f.submit 'Sign in', class: "btn" %></li>
  <li><%= link_to "Forgot your password?", new_password_path('user') %></li>
<% end %>

